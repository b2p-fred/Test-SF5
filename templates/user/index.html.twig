{% extends "base.html.twig" %}

{% block title %}Utilisateurs{% endblock %}
{% block content %}
    <div class="p-5">
        <h1>Liste des utilisateurs</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_register') }}">Register a new user</a>
            <hr/>
        {% endif %}

        <table class="table table-responsive">
            <tr>
                <th></th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Date de naissance</th>
                <th>Mail</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', {"id": user.id}) }}">Fiche</a></td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td></td>
{#                    <td>{{ user.birthday|date('d/m/Y') }}</td>#}
                    <td>{{ user.email }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
