{% extends 'base.html.twig' %}

{% block title %}A building: #{{ item.id }}{% endblock %}

{% block content %}

    <form name="buildingForm">
        <fieldset disabled="disabled">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="_name" value="{{ item.name }}"/>
            </div>

            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" id="address" name="_address" value="{{ item.address }}"/>

                <label for="zipcode"></label>
                <input type="text" id="zipcode" name="_zipcode" value="{{ item.zipcode }}"/>

                <label for="city"></label>
                <input type="text" id="city" name="_city" value="{{ item.city }}"/>
            </div>
        </fieldset>
    </form>
{% endblock %}