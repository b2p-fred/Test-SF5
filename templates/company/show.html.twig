{% extends 'base.html.twig' %}

{% block title %}A company: #{{ item.id }}{% endblock %}

{% block content %}

    <form name="companyForm">
        <fieldset disabled="disabled">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="_name" value="{{ item.name }}"/>
            </div>

            {% if item.building is defined %}
                <div class="form-group">
                    <label for="location">Location:</label>
                    <a href="{{ path('building_show', {"id": item.building.id}) }}">{{ item.building.name }}</a>
                </div>
            {% endif %}
        </fieldset>
    </form>
{% endblock %}